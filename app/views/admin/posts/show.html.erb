<p id="notice"><%= notice %></p>
<div class="post">
  <strong>Title:</strong>
  <p><%= @post.title %></p>
  <strong>Date:</strong>
  <p><%= @post.created_at %></p>
  <strong>Body:</strong>
  <p><%= @post.body %></p>
  <div class="links">
		<%= link_to 'Edit', edit_admin_post_path(@post), class:"btn" %>
		<%= link_to 'Destroy', admin_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn warning" %>
  </div>
</div>
