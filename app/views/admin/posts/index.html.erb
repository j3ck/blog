<div class="container">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="head">
        <%= post.title %>
      </div>
      <div class="body">
        <p class="date"><%= post.created_at %></p>
        <%= post.body %>
      </div>
      <div class="links">
        <%#= link_to 'Show', post %>
        <%#= link_to 'Edit', edit_post_path(post) %>
        <%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>

  <br>
  <%#= link_to 'New Post', new_post_path %>
</div>
